@import 'nib'

marco(grosor = 1px, tipo = solid, color = black)
  border grosor tipo color
  box-sizing border-box

body
  margin 0
  padding 0
  width 100%
  height 100vh
  marco(3px, dashed, gray)

header
  padding 0
  margin 0
  width 100%
  min-height 150px
  marco(3px, double, blue)

#top-bar-background
  margin 0
  padding 0
  width 100%
  height 40px
  marco(2px, dashed, red)

#top-bar
  width 1000px
  height 100%
  margin 0 auto
  padding 0
  marco(1px, solid, green)

#hidden-zone-background
  width 100%
  height 140px
  margin 0
  padding 0
  marco(2px, dashed, black)

#hidden-zone
  margin 0 auto
  padding 0
  width 1000px
  height 100%
  marco(2px, dashed, gray)

#header-title-background
  width 100%
  height 100px
  margin 0
  padding 0
  marco(2px, dashed, red)

#header-title
  width 1000px
  height 100%
  margin 0 auto
  padding 0
  marco(2px, dashed, blue)

#header-bottom-menu-background
  width 100%
  height 40px
  margin 0
  padding 0
  marco(2px, dashed, black)

#header-bottom-menu
  width 1000px
  height 100%
  margin 0 auto
  padding 0
  marco(2px, dashed, green)

main
  margin 0
  padding 0
  width 100%
  height 700px
  marco(3px, double, red)

#main-content
  display flex
  margin 0 auto
  padding 0
  width 1000px
  height 100%
  marco()

#news-content
  padding 0
  margin 0
  width 700px
  height 100%
  marco()

#side-content
  padding 0
  margin 0
  width 300px
  height 100%
  marco(1px, solid, red)

#search-box
  border 1px solid black
  box-sizing border-box
