@import 'nib'

marco(grosor = 1px, tipo = solid, color = black)
  border grosor tipo color
  box-sizing border-box

body
  margin 0
  padding 0
  width 100%
  height 100vh
  marco(3px, dashed, gray)

header
  padding 0
  margin 0
  width 100%
  min-height 150px
  marco(3px, double, blue)

#top-bar-background
  margin 0
  padding 0
  width 100%
  height 48px
  marco(2px, dashed, red)

#top-bar
  width 1000px
  height 100%
  margin 0 auto
  padding 0
  marco(1px, solid, green)
  display flex

#top-bar-logo
  width 100px
  height 100%
  padding 0
  margin 0
  display flex
  align-items center
  marco()

#top-bar-login
  width 160px
  height 100%
  margin 0
  padding 0
  display flex
  align-items center
  marco(1px, solid, red)
  > img
    margin-left 15px
    margin-right 10px

#top-bar-menu
  margin 0
  padding 0
  width 600px
  height 100%
  display flex
  justify-content center
  align-items center
  marco()
  > ul
    list-style none
    display flex
    flex 1
    justify-content space-around
    marco(1px, solid, blue)
    > li > a
      text-decoration none
    > li > img
      margin-left 5px
      
#top-bar-search-bar
  margin-left 10px
  padding 0
  display flex
  justify-content center
  align-items center
  > input
    width 180px

#hidden-zone-background
  display none
  width 100%
  height 140px
  margin 0
  padding 0
  marco(2px, dashed, black)

#hidden-zone
  display none
  margin 0 auto
  padding 0
  width 1000px
  height 100%
  marco(2px, dashed, gray)

#header-title-background
  display none
  width 100%
  height 100px
  margin 0
  padding 0
  marco(2px, dashed, red)

#header-title
  display none
  width 1000px
  height 100%
  margin 0 auto
  padding 0
  marco(2px, dashed, blue)

#header-bottom-menu-background
  display none
  width 100%
  height 40px
  margin 0
  padding 0
  marco(2px, dashed, black)

#header-bottom-menu
  display none
  width 1000px
  height 100%
  margin 0 auto
  padding 0
  marco(2px, dashed, green)
