@import 'nib'

marco(grosor = 1px, tipo = solid, color = black)
  border grosor tipo color
  box-sizing border-box

body
  margin 0
  padding 0
  width 100%
  height 100vh
  marco(3px, dashed, gray)
  font-family Arial, Helvetica, sans-serif


header
  padding 0
  margin 0
  width 100%
  min-height 150px
  marco(3px, double, blue)

#top-bar-background
  margin 0
  padding 0
  width 100%
  height 48px
  marco(2px, dashed, red)

#top-bar
  width 1000px
  height 100%
  margin 0 auto
  padding 0
  marco(1px, solid, green)
  display flex

#top-bar-logo
  width 100px
  height 100%
  padding 0
  margin 0
  display flex
  align-items center
  marco()

#top-bar-login
  width 160px
  height 100%
  margin 0
  padding 0
  display flex
  cursor pointer
  align-items center
  marco(1px, solid, red)
  > img
    margin-left 15px
    margin-right 10px

#top-bar-menu
  margin 0
  padding 0
  width 600px
  height 100%
  display flex
  justify-content center
  align-items center
  marco()
  > ul
    list-style none
    display flex
    flex 1
    justify-content space-around
    marco(1px, solid, blue)
    > li > a
      text-decoration none
      font-weight bold
      color black
    > li > img
      margin-left 5px


#top-bar-search-bar
  margin-left 10px
  padding 0
  display flex
  justify-content center
  align-items center
  > input
    width 180px
    height 20px

#hidden-zone-background
  width 100%
  height 140px
  margin 0
  padding 0
  marco(2px, dashed, black)

#hidden-zone
  margin 0 auto
  padding 0
  width 1000px
  height 100%
  display flex
  marco(2px, dashed, gray)

#hidden-zone-title
  display flex
  justify-content center
  width 245px
  marco()

#hidden-zone-links
  marco(3px, dashed, green)
  display flex
  flex 1

table#linkTable
  display table
  margin-top 5px
  border-spacing 10px
  //border-collapse collapse
  width 100%
  //height 130px
  height 100%
  > th, td
    border 3px double #777
    cursor pointer
    width 10px
    > a
      text-decoration none
      color black
table#linkTable td:hover
  background-color black
  > a
    color white

#header-title-background
  display none
  width 100%
  height 100px
  margin 0
  padding 0
  marco(2px, dashed, red)

#header-title
  display none
  width 1000px
  height 100%
  margin 0 auto
  padding 0
  marco(2px, dashed, blue)

#header-bottom-menu-background
  display none
  width 100%
  height 40px
  margin 0
  padding 0
  marco(2px, dashed, black)

#header-bottom-menu
  display none
  width 1000px
  height 100%
  margin 0 auto
  padding 0
  marco(2px, dashed, green)
